<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>ホーム</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
        
    </head>

    <body>

        <%- include('../common/header') %>
    
        <div id="contents_main">
        
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% for (let i in contents) { %>
                        <% if (i != 0) { %>
                            <div class="carousel-item" data-bs-interval="10000">
                                <div class="d-block w-100">
                                    <div class="contents_title"><h1 class="contents_h1_font"><%- contents[i].name %></h1></div>
                
                                    <div class="contents_ingredient">
                                        <h1 class="contents_sub_title contents_p_font">材料</h1>
                                        <div class="contents_ingredient_area"><p class="contents_p_font"><%- contents[i].ingredient %></p></div>
                                    </div>

                                    <div class="contents_carousel_btn">
                                        <a href="/recipes/recipe/<%= contents[0].recipes_id%>" class="link_style">
                                            <div class="d-grid gap-2 col-6 mx-auto">
                                                <button type="button" class="btn btn-outline-primary">レシピへ</button>
                                            </div>
                                        </a>
                                    </div>
                                    
                                </div>
                            </div>
                        
                        <% } else if (i == 0) { %>
                            <div class="carousel-item active" data-bs-interval="10000">
                                <div class="d-block w-100">
                                    <div class="contents_title"><h1 class="contents_h1_font"><%- contents[i].name %></h1></div>
            
                                    <div class="contents_ingredient">
                                        <h1 class="contents_sub_title contents_p_font">材料</h1>
                                        <div class="contents_ingredient_area"><p class="contents_p_font"><%- contents[i].ingredient %></p></div>
                                    </div>

                                    <div class="contents_carousel_btn">
                                        <a href="/recipes/recipe/<%= contents[0].recipes_id%>" class="link_style">
                                            <div class="d-grid gap-2 col-6 mx-auto">
                                                <button type="button" class="btn btn-outline-primary">レシピへ</button>
                                            </div>
                                        </a>
                                    </div>
            
                                </div>
                            </div>
                        <% }  %>
                    <% } %>
                </div>
                <button type="button" class="carousel-control-prev" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="visually-hidden">前へ</span>
                </button>
                <button type="button" class="carousel-control-next" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="visually-hidden">次へ</span>
                </button>
            </div>
        </div>    

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    </body>

</html>